#!/usr/bin/python -Es
import argparse

from toolforge.common import Tool
from toolforge.webservice import proxy
from toolforge.webservice.services import webservice_classes

argparser = argparse.ArgumentParser()
argparser.add_argument(
    "--type",
    dest="wstype",
    help="Type of webservice to start",
    choices=webservice_classes.keys(),
)
argparser.add_argument(
    "--port", help="Port to bind the webservice to", type=int, default=0
)
argparser.add_argument(
    "--register-proxy",
    action="store_true",
    help="Register webservice with proxy",
)
argparser.add_argument(
    "--canonical",
    help="Redirect legacy URL to the canonical $TOOL.toolforge.org URL",
)
argparser.add_argument(
    "extra_args",
    nargs=argparse.REMAINDER,
    help="Extra arguments optionally passed to the chosen webservice type",
)
args = argparser.parse_args()


tool = Tool.from_currentuser()
if args.port != 0:
    port = args.port
else:
    port = proxy.get_open_port()

webservice = webservice_classes[args.wstype](tool, args.extra_args)

if args.register_proxy:
    proxy.register(port, args.canonical)
webservice.run(port)
